{
  "name": "labiba-ide",
  "version": "1.0.2",
  "main": "src/main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@babel/generator": "^7.4.4",
    "@fortawesome/fontawesome-free": "^5.9.0",
    "bootstrap-v4-rtl": "^4.3.1-3",
    "dialogs": "^2.0.1",
    "jquery": "^3.4.1",
    "lodash": "^4.17.11",
    "monaco-editor": "^0.17.0",
    "popper.js": "^1.15.0",
    "smalltalk": "^3.4.0",
    "tone": "^13.4.9"
  },
  "devDependencies": {
    "electron": "^5.0.3",
    "electron-builder": "^20.43.0"
  },
  "build": {
    "appId": "labiba",
    "productName": "Labiba IDE",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "لبيبة",
      "artifactName": "Labiba.Setup.${version}.${ext}"
    }
  }
}
