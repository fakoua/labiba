{
  "name": "labiba-ide",
  "version": "1.0.5",
  "main": "src/main.js",
  "author": {
    "name": "Sameh Fakoua",
    "email": "s.fakoua@gmail.com"
  },
  "description": "لغة البرمجة لبيبة باللغة العربية هي أو لغة برمجة متكاملة متوافقة مع جافاسكريبت 7",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "dialogs": "^2.0.1",
    "jquery": "^3.4.1",
    "lodash": "^4.17.11",
    "monaco-editor": "^0.17.0",
    "split.js": "^1.5.11",
    "tone": "^13.4.9"
  },
  "devDependencies": {
    "electron": "^5.0.3",
    "electron-builder": "^20.43.0"
  },
  "build": {
    "appId": "labiba",
    "productName": "Labiba IDE",
    "fileAssociations": {
      "ext": "la",
      "name": "لغة لبيبة",
      "icon": "src/static/images/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/static/images/icon.png"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "لبيبة",
      "artifactName": "Labiba.Setup.${version}.${ext}"
    }
  }
}
